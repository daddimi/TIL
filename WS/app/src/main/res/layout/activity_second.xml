<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/milayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F0FB"
    android:backgroundTint="#F4F0FB"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txgetinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="원하는 날짜를 입력 후 버튼을 누르면 입력한 날짜의 박스오피스 정보를 확인하실 수 있습니다.  (날짜 입력 예시 - 20200505)"
        android:textColor="#000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/inputdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:text="20200505" />

    <Button
        android:id="@+id/MIbt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#673AB7"
        android:backgroundTint="#673AB7"
        android:onClick="mick"
        android:text="박스오피스 확인하기"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/milist"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>